<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:SistemaChamados.Mobile.Helpers"
             xmlns:converters="clr-namespace:SistemaChamados.Mobile.Converters"
             x:Class="SistemaChamados.Mobile.App">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Conversores -->
      <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
      <helpers:IsNotNullConverter x:Key="IsNotNullConverter" />
      <converters:UtcToLocalDateTimeConverter x:Key="UtcToLocalConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
