<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaChamados.Mobile.Views.MainPage"
             Title="Dashboard">
  <ContentPage.Resources>
    <LinearGradientBrush x:Key="DashboardGradient" StartPoint="0,0" EndPoint="1,1">
      <GradientStop Color="#2A5FDF" Offset="0" />
      <GradientStop Color="#3FA5F5" Offset="1" />
    </LinearGradientBrush>
  </ContentPage.Resources>

  <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="24">
      <Border Background="{StaticResource DashboardGradient}" StrokeThickness="0" Padding="24" StrokeShape="RoundRectangle 28">
        <VerticalStackLayout Spacing="6">
          <Label Text="Olá!"
                 FontSize="18"
                 TextColor="{DynamicResource White}" />
          <Label Text="{Binding Welcome}"
                 FontSize="28"
                 FontAttributes="Bold"
                 TextColor="{DynamicResource White}" />
          <Label Text="Gerencie seus chamados com clareza e agilidade."
                 TextColor="{DynamicResource White}" />
        </VerticalStackLayout>
      </Border>

      <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="16">
        <Frame Grid.Row="0" Grid.Column="0" Padding="18" CornerRadius="20" BackgroundColor="{DynamicResource Secondary}" BorderColor="Transparent">
          <VerticalStackLayout Spacing="6">
            <Label Text="Meus chamados" FontAttributes="Bold" TextColor="{DynamicResource PrimaryDarkText}" />
            <Label Text="Vizualize e acompanhe o status das solicitações." TextColor="{DynamicResource Gray500}" FontSize="13" />
            <Button Text="Abrir" Command="{Binding GoChamadosCommand}" HeightRequest="44" />
          </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="0" Grid.Column="1" Padding="18" CornerRadius="20" BackgroundColor="{DynamicResource White}" BorderColor="{DynamicResource Gray200}">
          <VerticalStackLayout Spacing="6">
            <Label Text="Novo chamado" FontAttributes="Bold" TextColor="{DynamicResource PrimaryDarkText}" />
            <Label Text="Relate um novo problema para nossa equipe." TextColor="{DynamicResource Gray500}" FontSize="13" />
            <Button Text="Registrar" Command="{Binding NovoChamadoCommand}" HeightRequest="44" BackgroundColor="{DynamicResource Primary}" />
          </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="18" CornerRadius="20" BackgroundColor="{DynamicResource White}" BorderColor="{DynamicResource Gray200}">
          <VerticalStackLayout Spacing="10">
            <Label Text="Precisa de ajuda rápida?" FontAttributes="Bold" TextColor="{DynamicResource PrimaryDarkText}" />
            <Label Text="Nosso suporte inteligente utiliza IA para direcionar cada chamado ao especialista ideal." TextColor="{DynamicResource Gray500}" />
            <Button Text="Sair" Command="{Binding LogoutCommand}" BackgroundColor="{DynamicResource Secondary}" TextColor="{DynamicResource PrimaryDarkText}" HeightRequest="44" />
          </VerticalStackLayout>
        </Frame>
      </Grid>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
